{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "lib",
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "examples"]
}
